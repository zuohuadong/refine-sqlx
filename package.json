{
  "name": "refine-sqlx",
  "version": "0.3.2",
  "description": "A type-safe Refine data provider with Drizzle ORM for SQLite databases (Bun, Node.js, Cloudflare D1).",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medz/refine-sqlx.git"
  },
  "scripts": {
    "test": "jest --testPathIgnorePatterns=\"test/integration\"",
    "test:bun": "bun test test/",
    "test:integration-bun": "bun test test/integration/bun.test.ts",
    "test:integration-node": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/integration/node.test.ts",
    "test:integration-better-sqlite3": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/integration/better-sqlite3.test.ts",
    "build": "unbuild && bun run build-d1.ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "version": "changeset version && bun install --lockfile-only",
    "release": "bun run build && changeset publish",
    "db:generate": "drizzle-kit generate",
    "db:generate:d1": "drizzle-kit generate --config=drizzle.config.d1.ts",
    "db:push": "drizzle-kit push",
    "db:push:d1": "drizzle-kit push --config=drizzle.config.d1.ts",
    "db:studio": "drizzle-kit studio",
    "db:studio:d1": "drizzle-kit studio --config=drizzle.config.d1.ts",
    "db:migrate:d1": "bun run scripts/migrate-d1.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./d1": {
      "types": "./dist/d1.d.mts",
      "workerd": "./dist/d1.mjs",
      "import": "./dist/d1.mjs"
    }
  },
  "bin": {
    "refine-sqlx": "./dist/refine-sqlx.mjs"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@cloudflare/workers-types": "^4.20251011.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.7.2",
    "@types/prompts": "^2.4.9",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "drizzle-kit": "^0.31.5",
    "jest": "^29.7.0",
    "ora": "^9.0.0",
    "prettier": "^3.6.2",
    "prompts": "^2.4.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.0.0",
    "unbuild": "^3.6.1"
  },
  "peerDependencies": {
    "@refinedev/core": "^4.57.10"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.4.1"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.6"
  }
}
