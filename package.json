{
  "name": "refine-sqlx",
  "version": "0.8.1",
  "description": "A type-safe Refine data provider with Drizzle ORM for SQLite, PostgreSQL, MySQL databases (Bun, Node.js, Cloudflare D1).",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medz/refine-sqlx.git"
  },
  "scripts": {
    "test": "bun test test/",
    "build": "unbuild && bun run tsc --declaration --emitDeclarationOnly --outDir dist",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "version": "changeset version && bun install --lockfile-only",
    "release": "bun run build && changeset publish",
    "db:generate": "drizzle-kit generate",
    "db:generate:d1": "drizzle-kit generate --config=drizzle.config.d1.ts",
    "db:push": "drizzle-kit push",
    "db:push:d1": "drizzle-kit push --config=drizzle.config.d1.ts",
    "db:studio": "drizzle-kit studio",
    "db:studio:d1": "drizzle-kit studio --config=drizzle.config.d1.ts",
    "db:migrate:d1": "bun run scripts/migrate-d1.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./d1": {
      "types": "./dist/d1.d.ts",
      "workerd": "./dist/d1.mjs",
      "import": "./dist/d1.mjs"
    }
  },
  "bin": {
    "refine-sqlx": "./dist/refine-sqlx.mjs"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@cloudflare/workers-types": "^4.20260210.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "@prettier/plugin-oxc": "^0.1.3",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "drizzle-kit": "^0.31.9",
    "ora": "^9.3.0",
    "prettier": "^3.8.1",
    "prompts": "^2.4.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1"
  },
  "peerDependencies": {
    "@refinedev/core": "^5.0.9",
    "@tanstack/react-query": "^5.90.21"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1"
  },
  "resolutions": {
    "string-width": "^7.2.0"
  }
}