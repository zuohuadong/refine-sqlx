{
  "name": "refine-sql-monorepo",
  "version": "0.3.0",
  "description": "Monorepo for Refine SQL data providers",
  "private": true,
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medz/refine-sql.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter='*' build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:bun": "bun test",
    "test:integration": "bun run --filter='*' test:integration",
    "test:integration-bun": "cd packages/refine-sql && bun run test:integration-bun",
    "test:integration-node": "cd packages/refine-sql && bun run test:integration-node",
    "test:integration-better-sqlite3": "cd packages/refine-sql && bun run test:integration-better-sqlite3",
    "test:integration-mysql": "cd packages/refine-sqlx && node --experimental-vm-modules ../../node_modules/jest/bin/jest.js src/__tests__/integration",
    "test:integration-postgresql": "cd packages/refine-sqlx && node --experimental-vm-modules ../../node_modules/jest/bin/jest.js src/__tests__/integration",
    "typecheck": "bun run --filter='*' typecheck",
    "typecheck:strict": "tsc --project tsconfig.strict.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "size": "size-limit",
    "test:compatibility": "node scripts/test-compatibility.js",
    "test:modules": "node scripts/test-module-formats.js",
    "quality:check": "npm run typecheck && npm run lint && npm run format:check && npm run size",
    "quality:fix": "npm run lint:fix && npm run format",
    "quality:strict": "npm run typecheck:strict && npm run quality:check",
    "test:tree-shaking": "node scripts/test-tree-shaking.js",
    "test:node-versions": "node scripts/test-node-versions.js",
    "test:compatibility-full": "npm run test:compatibility && npm run test:modules",
    "test:all-quality": "npm run test:node-versions && npm run test:compatibility && npm run test:modules && npm run test:tree-shaking",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "release:interactive": "node scripts/version-manager.js",
    "release:auto": "semantic-release",
    "release:it": "release-it",
    "release:lerna": "lerna publish",
    "version:bump": "changeset version && changeset tag",
    "version:check": "changeset status --verbose",
    "prerelease": "bun run build && bun run test && bun run lint",
    "postrelease": "git push --follow-tags origin main",
    "release:dry-run": "changeset publish --dry-run"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@eslint/js": "9.37.0",
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@jest/globals": "30.2.0",
    "@prettier/plugin-oxc": "0.0.4",
    "@refinedev/core": "5.0.4",
    "@size-limit/preset-small-lib": "11.2.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "better-sqlite3": "12.4.1",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "jest": "^29.7.0",
    "mysql2": "3.15.2",
    "postgres": "3.4.7",
    "prettier": "3.6.2",
    "size-limit": "11.2.0",
    "ts-jest": "^29.2.5",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.0"
  }
}
