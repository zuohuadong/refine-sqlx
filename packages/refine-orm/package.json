    "database",
    "typescript",
    "type-safe",
    "react",
    "crud",
    "sql",
    "bun",
    "nodejs",
    "chain-query",
    "polymorphic",
    "relationships",
    "transactions",
    "multi-database",
    "query-builder",
    "admin-panel",
    "dashboard",
    "backend",
    "frontend",
    "full-stack",
    "web-development",
    "javascript",
    "tsx",
    "jsx"
  ],
  "scripts": {
    "test": "vitest",
    "test:integration": "vitest test/integration",
    "build": "unbuild",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run typecheck && bun run build && bun run test",
