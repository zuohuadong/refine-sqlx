    "mysql2": "^3.11.4",
    "postgres": "^3.4.5",
    "prettier": "^3.6.2",
    "unbuild": "^3.5.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@refinedev/core": "^4.57.10"
  },
