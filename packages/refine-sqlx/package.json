{
  "name": "refine-sqlx",
  "version": "0.3.2",
  "description": "A Refine ORM data provider with multi-database support using drizzle-orm.",
  "type": "module",
  "license": "MIT",
  "author": "RefineORM Team",
  "engines": {
    "node": ">=16.0.0"
  },
  "homepage": "https://github.com/medz/refine-sql#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medz/refine-sql.git",
    "directory": "packages/refine-sqlx"
  },
  "bugs": {
    "url": "https://github.com/medz/refine-sql/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [
    "refine",
    "data-provider",
    "orm",
    "drizzle",
    "drizzle-orm",
    "mysql",
    "postgresql",
    "sqlite",
    "database",
    "typescript",
    "type-safe",
    "react",
    "crud",
    "sql",
    "bun",
    "nodejs",
    "chain-query",
    "polymorphic",
    "relationships",
    "transactions",
    "multi-database",
    "query-builder",
    "admin-panel",
    "dashboard",
    "backend",
    "frontend",
    "full-stack",
    "web-development",
    "javascript",
    "tsx",
    "jsx"
  ],
  "scripts": {
    "test": "bun test --timeout 30000",
    "test:unit": "bun test --exclude='**/__tests__/integration/**'",
    "test:node": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:integration": "bun test --timeout 60000 src/__tests__/integration",
    "build": "unbuild",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run typecheck && bun run build && bun run test:unit",
    "pack-test": "npm pack --dry-run"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "dependencies": {
    "refine-core-utils": "workspace:*",
    "drizzle-orm": "^0.44.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.13",
    "@types/bun": "1.2.23",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.0",
    "typescript": "^5.9.3",
    "better-sqlite3": "^12.4.1",
    "jest": "^30.2.0",
    "mysql2": "^3.15.2",
    "postgres": "^3.4.5",
    "prettier": "3.6.2",
    "ts-jest": "^29.2.5",
    "unbuild": "3.6.1"
  },
  "peerDependencies": {
    "@refinedev/core": "4.57.11"
  },
  "optionalDependencies": {
    "better-sqlite3": "12.4.1",
    "mysql2": "3.15.2",
    "postgres": "3.4.7"
  }
}
