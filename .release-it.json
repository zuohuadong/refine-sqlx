{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireBranch": "main",
    "requireCommits": true,
    "tagName": "v${version}",
    "push": true,
    "pushTags": true
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "draft": false,
    "preRelease": false,
    "autoGenerate": true
  },
  "npm": {
    "publish": true,
    "publishPath": ".",
    "tag": "latest",
    "otp": false,
    "ignoreVersion": false,
    "skipChecks": false
  },
  "hooks": {
    "before:init": ["bun run lint", "bun run test", "bun run build"],
    "after:bump": "bun run build",
    "after:git:release": "echo 'Successfully released v${version}'",
    "after:release": "echo 'ğŸ‰ Release complete!'"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "âœ¨ Features" },
          { "type": "fix", "section": "ğŸ› Bug Fixes" },
          { "type": "perf", "section": "âš¡ Performance" },
          { "type": "docs", "section": "ğŸ“š Documentation" },
          { "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
          { "type": "test", "section": "âœ… Tests" },
          { "type": "build", "section": "ğŸ“¦ Build System" },
          { "type": "ci", "section": "ğŸ”§ CI/CD" },
          { "type": "chore", "section": "ğŸ”¨ Maintenance" },
          { "type": "revert", "section": "âª Reverts" },
          { "type": "style", "section": "ğŸ’„ Styling" }
        ]
      },
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "out": ["package.json", "packages/*/package.json"]
    }
  }
}